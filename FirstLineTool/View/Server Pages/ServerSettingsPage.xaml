<Window x:Class="FirstLineTool.View.Server_Pages.ServerSettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLineTool.View.Server_Pages"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        WindowStyle="None"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        AllowsTransparency="True"
        Background="Transparent"
        Title="DatabaseQueries" Height="247" Width="800">
    <Border Background="White" CornerRadius="10" 
                BorderBrush="#bf072f"
                BorderThickness="1"
                MouseDown="Border_MouseDown">

        <Grid>
            <!-- زرارين فوق على اليمين -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 10 10 0">

                

                <!-- Close -->
                <Button Name="btnClose" Style="{StaticResource topButton}" Click="btnClose_Click">
                    <Icon:PackIconMaterial Kind="Close" Width="12" Height="12"/>
                </Button>

            </StackPanel>

            <!-- محتوى الفورم -->
            <StackPanel Margin="40 60 40 40" VerticalAlignment="Top">

                <GroupBox Header="Server Settings"
          HorizontalAlignment="Stretch"
          BorderBrush="Gray"
          BorderThickness="1"
          Background="White"
          Padding="10"
          SnapsToDevicePixels="True">

                    <GroupBox.Resources>
                        <Style TargetType="GroupBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <Grid>
                                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Background="White" />
                                            <DockPanel Margin="10,7,10,10">
                                                <Label DockPanel.Dock="Top"
                                       Content="{TemplateBinding Header}"
                                       Background="White"
                                       Foreground="Black"
                                       FontWeight="Bold"
                                       Margin="10,-17,0,5"/>
                                                <ContentPresenter Margin="0,5,0,0"/>
                                            </DockPanel>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupBox.Resources>

                    <!-- Start Content -->
                    <Grid Margin="0 10" Height="92">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="50"/>
                            <!-- مكان الزرار -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- TextBoxes -->
                        <TextBox 
                            x:Name="txtIPAddress" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                            materialDesign:HintAssist.Hint="Server IP Address" 
                            BorderBrush="Black" 
                            BorderThickness="0 0 0 1.5"
                            Grid.Column="0" Grid.Row="0"/>

                        <TextBox 
                            x:Name="txtPort" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                            materialDesign:HintAssist.Hint="Server Port" 
                            BorderBrush="Black" 
                            BorderThickness="0 0 0 1.5"
                            Grid.Column="2" Grid.Row="0"/>

                        <!-- زرار Update في النص -->
                        <Button x:Name="btnUpdate"
                            Content="Update"
                            Width="120" Height="35"
                            Background="#076ebf"   
                            BorderBrush="Transparent"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Margin="0,15,0,0"
                            Click="btnUpdate_Click"/>
                    </Grid>

                </GroupBox>



            </StackPanel>
        </Grid>
    </Border>
</Window>
