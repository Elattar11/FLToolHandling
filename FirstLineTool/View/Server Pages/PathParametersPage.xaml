<Window x:Class="FirstLineTool.View.Server_Pages.PathParametersPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:FirstLineTool.View.Server_Pages" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" mc:Ignorable="d" FontFamily="{DynamicResource MaterialDesignFont}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Title="PathParametersPage" Height="700" Width="900">
    <Window.Resources>
        <Style TargetType="ScrollBar" BasedOn="{x:Null}">
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder" CornerRadius="5" Background="#a00628" Margin="1,0" SnapsToDevicePixels="True"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#FAFAFA" CornerRadius="10" BorderBrush="#bf072f" BorderThickness="1" MouseDown="Border_MouseDown">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>
            <!-- ========== HEADER ========== -->
            <Grid Grid.Row="0" Margin="10,10,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- عنوان النافذة + أيقونة -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" Margin="10,0,0,0">
                    <Icon:PackIconMaterial Kind="FolderCog" Width="22" Height="22" Foreground="#bf072f" Margin="0,0,8,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Path Parameters Settings" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Manage dynamic parameters for server paths" FontSize="11" Foreground="#777"/>
                    </StackPanel>
                </StackPanel>
                <!-- أزرار Refresh + Close -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,5,0">
                    <Button x:Name="btnRefresh" Style="{StaticResource topButton}" Click="btnRefresh_Click">
                        <Icon:PackIconMaterial Kind="Refresh" Width="14" Height="14"/>
                    </Button>
                    <Button x:Name="btnClose" Style="{StaticResource topButton}" Click="btnClose_Click">
                        <Icon:PackIconMaterial Kind="Close" Width="14" Height="14"/>
                    </Button>
                </StackPanel>
            </Grid>
            <!-- ========== CONTENT ========== -->
            <ScrollViewer Grid.Row="1" Margin="20,10,20,20" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <!-- ==== Card 1: Path Parameters Data ==== -->
                    <materialDesign:Card Margin="0,0,0,10" Padding="15" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Path Parameters Data" FontSize="14" FontWeight="Bold" Foreground="#bf072f" Margin="0,0,0,10"/>
                            <!-- Select Path -->
                            <ComboBox x:Name="cbxPaths" IsEditable="True" IsTextSearchEnabled="False" StaysOpenOnEdit="True" TextSearch.TextPath="Display" Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Select Path" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                            <!-- Parameter Name -->
                            <TextBox x:Name="txtParamName" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Parameter Name" BorderBrush="Black" BorderThickness="0 0 0 1.5" Margin="0 0 0 10"/>
                            <!-- Parameter Display Name -->
                            <TextBox x:Name="txtDisplatName" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Parameter Display Name" BorderBrush="Black" BorderThickness="0 0 0 1.5" Margin="0"/>
                        </StackPanel>
                    </materialDesign:Card>
                    <!-- ==== Card 2: Result / Existing Parameters ==== -->
                    <materialDesign:Card Margin="0,5,0,0" Padding="15" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Existing Parameters" FontSize="14" FontWeight="Bold" Foreground="#bf072f" Margin="0,0,0,10"/>
                            <!-- مربع البحث -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 10">
                                <!-- TextBox داخل Border دائري -->
                                <Border CornerRadius="20" Background="White" Padding="10 5" Width="300" Height="38" BorderBrush="#bf072f" BorderThickness="1">
                                    <TextBox x:Name="txtSearch" Background="Transparent" BorderThickness="0" Foreground="Black" FontSize="14" KeyDown="txtSearch_KeyDown" VerticalContentAlignment="Center" materialDesign:HintAssist.Hint="Parameter Name..."/>
                                </Border>
                                <!-- زرار الأيقونة -->
                                <Button x:Name="btnSearch" Width="38" Height="38" Margin="10 0 0 0" Background="Transparent" BorderBrush="#bf072f" BorderThickness="1" ToolTip="Search" Click="btnSearch_Click" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="19" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Icon:PackIconMaterial Kind="Magnify" Width="18" Height="18" Foreground="#bf072f"/>
                                </Button>
                            </StackPanel>
                            <!-- DataGrid -->
                            <DataGrid x:Name="dgParameters" Margin="0 10 0 0" AutoGenerateColumns="True" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" MaxHeight="250" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" SelectionChanged="dgParameters_SelectionChanged" HeadersVisibility="Column" GridLinesVisibility="All" BorderBrush="#dddddd" BorderThickness="1" HorizontalGridLinesBrush="#e0e0e0" VerticalGridLinesBrush="#e0e0e0" RowBackground="White" AlternatingRowBackground="#fafafa" Style="{StaticResource MaterialDesignDataGrid}" ColumnWidth="*">
                                <DataGrid.Resources>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                </DataGrid.Resources>
                                <!-- ✅ Cell Style -->
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5,0"/>
                                        <Setter Property="BorderThickness" Value="0.5"/>
                                        <Setter Property="BorderBrush" Value="#dddddd"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" RecognizesAccessKey="True"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.CellStyle>
                                <!-- ✅ Header Style -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                        <Setter Property="Background" Value="#bf072f"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Height" Value="35"/>
                                        <Setter Property="BorderBrush" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <!-- ✅ Row Style -->
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Setter Property="BorderBrush" Value="#dddddd"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridRow">
                                                    <Border x:Name="RowBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3" SnapsToDevicePixels="True">
                                                        <DataGridCellsPresenter x:Name="CellsPresenter" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <!-- Hover -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="RowBorder" Property="Background" Value="#fff2f2"/>
                                                        </Trigger>
                                                        <!-- ✅ Selected Row Style -->
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="RowBorder" Property="Background" Value="#ffe6e6"/>
                                                            <Setter Property="Foreground" Value="#bf072f"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="#bf072f" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                            <!-- الأزرار -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                                <Button Content="Add" x:Name="btnAdd" Width="100" Height="35" Margin="5 0" BorderBrush="Transparent" Background="#07bf62" Foreground="White" Click="btnAdd_Click"/>
                                <Button Content="Update" x:Name="btnUpdate" Width="100" Height="35" Margin="5 0" Background="#076ebf" BorderBrush="Transparent" Foreground="White" Click="btnUpdate_Click"/>
                                <Button Content="Delete" x:Name="btnDelete" Width="100" Height="35" Margin="5 0" Background="#bf072f" BorderBrush="Transparent" Foreground="White" Click="btnDelete_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>