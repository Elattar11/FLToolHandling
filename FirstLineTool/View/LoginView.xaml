<Window x:Class="FirstLineTool.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="LoginView" 
        Height="645" 
        Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontSize="18"
        FontFamily="{DynamicResource MaterialDesignFont}">


    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid Margin="20">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="30"
                          ShadowDepth="1"
                          Opacity="0.4"/>
            </Grid.Effect>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.22*"/>

            </Grid.ColumnDefinitions>

            <!--Left Section-->

            <Border Background="#bf072f"
            CornerRadius="10 0 0 10"
            ClipToBounds="True">

                <Border.Clip>
                    <RectangleGeometry Rect="0,0,400,605"
                               RadiusX="10"
                               RadiusY="10"/>
                </Border.Clip>

                <Grid>
                    <Ellipse Width="500"
                    Height="500"
                    VerticalAlignment="Bottom"
                    Fill="#cc5e74"
                    Margin="50 0 0 -200"
                    Opacity="0.6"/>

                    <Ellipse Width="300"
                    Height="300"
                    VerticalAlignment="Bottom"
                    Fill="#e26f87"
                    Margin="-450 0 0 30"
                    Opacity="0.3"/>

                    <Ellipse Width="400"
                    Height="400"
                    VerticalAlignment="Bottom"
                    Fill="#cc5e74"
                    Margin="-320 0 0 -120"
                    Opacity="0.3"/>

                    <Ellipse Width="250"
                    Height="250"
                    VerticalAlignment="Bottom"
                    Fill="#d46a81"
                    Margin="-380 0 0 -120"
                    />

                    <Ellipse Width="400"
                    Height="400"
                    VerticalAlignment="Bottom"
                    Fill="#cc5e74"
                    Margin="280 0 0 -70"
                    Opacity="0.8"/>

                    <!--Icon-->

                    <Border Background="#fdfdfd"
                    CornerRadius="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Height="110"
                    Width="110"
                    Margin="0 0 0 80">

                        <Image Source="/FirstLineTool;component/Images/eandlogo.png"
                    Stretch="Uniform"
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                    </Border>

                    <StackPanel Margin="0 120 0 0"
                                VerticalAlignment="Top">

                        <TextBlock FontSize="46"
                           FontWeight="Medium"
                           Text="Firstline Tool"
                           Foreground="#ffffff"
                           TextAlignment="Center"/>


                        <TextBlock FontWeight="Light"
                           FontSize="16"
                           Foreground="#ffffff"
                           TextAlignment="Center"
                           Text="Welcome to FL Tool Handling"
                           Margin="0 15 0 3"/>

                        <TextBlock FontWeight="Light"
                           FontSize="16"
                           Foreground="#ffffff"
                           TextAlignment="Center"
                           Text="To handle all FL tasks"
                           />
                    </StackPanel>



                </Grid>

                <!--Titles-->






            </Border>

            <Border Grid.Column="1"
    Background="#ffffff"
    CornerRadius="0 10 10 0"
    MouseDown="Border_MouseDown">



                <Grid>

                    <Button Width="50"
                    Height="25"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 10 0 0"
                    Click="Button_Click">

                        <materialDesign:PackIcon Kind="Close"
                         Width="20"
                         Height="20"
                         Opacity="0.3"            
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
                    </Button>

                    <StackPanel VerticalAlignment="Center"
                Margin="20 0">

                        <TextBlock Text="Please enter your username and password"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#333"
                HorizontalAlignment="Center"
                Margin="0 0 0 30"/>


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- أيقونة FontAwesome -->
                            <fa:ImageAwesome Icon="User" 
                                     Foreground="#c5c8cc" 
                                     Width="20" Height="20" 
                                     VerticalAlignment="Center" 
                                     HorizontalAlignment="Center" 
                                     Margin="0 15 0 0"/>

                            <!-- TextBox -->
                            <TextBox Grid.Column="1"
                                x:Name="txtUsername"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                materialDesign:HintAssist.Hint="Username"
                                materialDesign:HintAssist.FloatingOffset="0,-20"
                                BorderBrush="#c5c8cc"
                                BorderThickness="0 0 0 1.5"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                                <!-- للعين -->
                            </Grid.ColumnDefinitions>

                            <!-- أيقونة FontAwesome -->
                            <fa:ImageAwesome Icon="Lock"
                     Foreground="#c5c8cc"
                     Width="20"
                     Height="20"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Margin="0 15 0 0"/>

                            <!-- PasswordBox -->
                            <PasswordBox Grid.Column="1"
                 x:Name="pwdBox"
                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                 materialDesign:HintAssist.Hint="Password"
                 KeyDown="pwdBox_KeyDown"
                 materialDesign:HintAssist.FloatingOffset="0,-20"
                 BorderBrush="#c5c8cc"
                 Margin="0 27"
                 BorderThickness="0 0 0 1.5"/>

                            <!-- TextBox لإظهار الباسورد -->
                            <TextBox Grid.Column="1"
             x:Name="txtVisiblePassword"
             Visibility="Collapsed"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             materialDesign:HintAssist.Hint="Password"
             materialDesign:HintAssist.FloatingOffset="0,-20"
             BorderBrush="#c5c8cc"
             Margin="0 27"
             BorderThickness="0 0 0 1.5" />

                            <!-- زر العين -->
                            <Button Grid.Column="1"
            x:Name="btnShowHide"
            Width="112"
            Height="48"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            Foreground="Red"
            Click="btnShowHide_Click" Grid.ColumnSpan="2" Margin="272,0,0,0">
                                <materialDesign:PackIcon Kind="Eye" Width="20" Height="20"/>
                            </Button>

                        </Grid>


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- 25% -->
                                <ColumnDefinition Width="2*"/>
                                <!-- 50% -->
                                <ColumnDefinition Width="*"/>
                                <!-- 25% -->
                            </Grid.ColumnDefinitions>

                            <Button Content="Login"
                            Background="#b9052f"
                            Foreground="#ffffff"
                            FontSize="18"
                            Grid.Column="1"
                            Click="Button_Click_1Async"
                            materialDesign:ButtonAssist.CornerRadius="22"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            
                            Height="45"/>
                        </Grid>


                    </StackPanel>

                </Grid>

            </Border>

        </Grid>

    </materialDesign:DialogHost>
</Window>
