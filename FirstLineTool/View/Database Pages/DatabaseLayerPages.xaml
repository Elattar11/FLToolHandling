<Page x:Class="FirstLineTool.View.Layer_Pages.DatabaseLayerPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstLineTool.View.Layer_Pages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DatabaseLayerPages">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Controls -->
            <RowDefinition Height="Auto"/>
            <!-- Parameters Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Run Query Button -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Export Button -->
        </Grid.RowDefinitions>

        <!-- Top Controls: ComboBoxes + Buttons -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ComboBoxes -->
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cbxConnections"
                              Width="250"
                              PreviewKeyUp="cbxConnections_PreviewKeyUp"
                              IsEditable="True"
                              IsTextSearchEnabled="False"
                              StaysOpenOnEdit="True"
                              TextSearch.TextPath="Display"
                              SelectionChanged="cbxConnections_SelectionChanged"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select Connection"
                              Grid.Column="0" VerticalAlignment="Bottom"/>

                    <ComboBox x:Name="cbxQueries"
                              Width="250"
                              PreviewKeyUp="cbxQueries_PreviewKeyUp"
                              IsEditable="True"
                              StaysOpenOnEdit="True"
                              SelectionChanged="cbxQueries_SelectionChanged"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select Query"
                              Grid.Column="2"/>
                </Grid>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Content="Connections"
                        x:Name="btnConnections"
                        Click="btnConnections_Click"
                        Foreground="#ffffff"
                        Background="#b9052f"
                        materialDesign:ButtonAssist.CornerRadius="16"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="150"
                        Margin="0,0,10,0"/>

                <Button Content="Queries"
                        x:Name="btnQueries"
                        Foreground="#ffffff"
                        Background="#b9052f"
                        materialDesign:ButtonAssist.CornerRadius="16"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="150" Click="Button_Click_1"/>

                <Button Name="btnRefresh"
                    Style="{StaticResource topButton}"
                    Margin="10,0,10,0"
                    Click="btnRefresh_Click">
                    <Icon:PackIconMaterial Kind="Refresh" Width="14" Height="14"/>
                </Button>

            </StackPanel>
        </Grid>

        <!-- Parameters Panel -->
        <Border Grid.Row="1"
                BorderBrush="#b9052f"
                BorderThickness="1.5"
                CornerRadius="5"
                Margin="20,10,20,10"
                Background="White"
                Padding="10">
            <StackPanel>
                <!-- Header -->
                <Border Padding="6,3" CornerRadius="3" HorizontalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock Text="Required Parameters"
                               Foreground="#b9052f"
                               FontWeight="Bold"
                               FontSize="13"/>
                </Border>

                <!-- ScrollViewer -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="ParametersPanel"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

        </StackPanel>
        <!-- Run Query Button -->
        <Grid Grid.Row="2" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Run Button -->
            <Button x:Name="btnRun"
            Content="Run Query"
            Click="Button_ClickAsync"
            Background="Black"
            Foreground="White"
            BorderThickness="0"
            Width="250"
            Height="40"
            materialDesign:ButtonAssist.CornerRadius="12"
            Style="{StaticResource MaterialDesignRaisedButton}"
            Grid.Column="1"/>

            <!-- Loading Spinner -->
            <ProgressBar x:Name="pbLoading"
                Width="40"
                Height="40"
                IsIndeterminate="True"
                Visibility="Collapsed"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignCircularProgressBar}"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="3"
                  x:Name="ResultsDataGrid"
                  Margin="20,0,20,20"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  CanUserResizeColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  BorderBrush="#dddddd"
                  BorderThickness="1"
                  HorizontalGridLinesBrush="#e0e0e0"
                  VerticalGridLinesBrush="#e0e0e0"
                  RowBackground="White"
                  AlternatingRowBackground="#fafafa"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  ColumnWidth="Auto"
                  SelectionMode="Extended"
                  SelectionUnit="Cell"
                  materialDesign:DataGridAssist.CellPadding="8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="10">

            <!-- Highlight و TextBrush -->
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
            </DataGrid.Resources>

            <!-- Cell Style -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Content.Text}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}">
                                    <TextBlock Text="{Binding Path=Content.Text, RelativeSource={RelativeSource TemplatedParent}}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>

            <!-- Column Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader"
           BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="#bf072f"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="35"/>

                    <!-- الفاصل -->
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>



            <!-- Row Style -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3"
                                        SnapsToDevicePixels="True">
                                    <DataGridCellsPresenter x:Name="CellsPresenter"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#fff2f2"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#ffe6e6"/>
                                        <Setter Property="Foreground" Value="#bf072f"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#bf072f"
                                                                  BlurRadius="10"
                                                                  ShadowDepth="0"
                                                                  Opacity="0.2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>

        <!-- Export Button below DataGrid -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button x:Name="btnExportToExcel"
            Content="Export to Excel"
            Width="150"
            Height="40"
            Background="#4CAF50" 
            Foreground="White"
            BorderBrush="Transparent"
            Click="btnExportToExcel_Click"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="12"/>
        </StackPanel>

    </Grid>
</Page>
