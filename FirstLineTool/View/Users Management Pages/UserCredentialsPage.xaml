<Page x:Class="FirstLineTool.View.Users_Management_Pages.UserCredentialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="UserCredentialsPage">

    <Page.Resources>
        <!-- نفس Style بتاع ScrollBar اللي كان عندك -->
        <Style TargetType="ScrollBar" BasedOn="{x:Null}">
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder"
                                                        CornerRadius="5"
                                                        Background="#a00628"
                                                        Margin="1,0"
                                                        SnapsToDevicePixels="True"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Notes + Credentials -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Action Buttons -->
        </Grid.RowDefinitions>

        <!-- ========== Row 0: HEADER ========== -->
        <Grid Grid.Row="0" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- عنوان الصفحة -->
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        Grid.Column="0">
                <TextBlock Text="User Credentials"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333"/>
                <TextBlock Text="Store and manage your system credentials"
                           FontSize="12"
                           Foreground="#777"/>
            </StackPanel>

        </Grid>

        <!-- ========== Row 1: NOTES + USERNAME / PASSWORD / SYSTEM NAME داخل Card ========== -->
        <materialDesign:Card Grid.Row="1"
                             Margin="20,0,20,10"
                             Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- نخلي الكونتينت في النص شوية زي ما كنت عامله بمارجن 100 -->
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Margin="100,10,100,10">

                    <!-- Notes Panel -->
                    <Border Background="Transparent"
                            BorderBrush="#bf072f"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0 0 0 15">
                        <StackPanel>
                            <TextBlock Text="Notes for adding your credentials"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       FontSize="14"
                                       Foreground="Red"
                                       Margin="0 0 0 8"/>

                            <TextBlock Text="1- In adding database credentials please write the same connection name in Oracle SQL Developer in system name."
                                       TextWrapping="Wrap"
                                       Foreground="Red"
                                       Margin="0 0 0 5"/>

                            <TextBlock Text="2- In adding IN Server Credentials please write {INServer} in system name."
                                       TextWrapping="Wrap"
                                       Foreground="Red"/>
                        </StackPanel>
                    </Border>

                    <!-- Username -->
                    <TextBox x:Name="txtUsername"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Username"
                             TextWrapping="NoWrap"
                             AcceptsReturn="False"
                             BorderBrush="Black"
                             BorderThickness="0 0 0 1.5"
                             Margin="0 0 0 10"
                             HorizontalAlignment="Stretch"/>

                    <!-- Password + Eye -->
                    <Grid Margin="0 0 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- PasswordBox -->
                        <PasswordBox x:Name="pwdBox"
                                     Grid.Column="0"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:HintAssist.Hint="Password"
                                     Padding="0 5 35 5"
                                     BorderBrush="Black"
                                     BorderThickness="0 0 0 1.5"
                                     FontSize="14" />

                        <!-- TextBox عند إظهار الباسورد -->
                        <TextBox x:Name="txtVisiblePassword"
                                 Grid.Column="0"
                                 Visibility="Collapsed"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Password"
                                 Padding="0 5 35 5"
                                 BorderBrush="Black"
                                 BorderThickness="0 0 0 1.5"
                                 FontSize="14"/>

                        <!-- زر العين -->
                        <Button x:Name="btnShowHide"
                                Width="55"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="Red"
                                BorderThickness="0"
                                Click="btnShowHide_Click" Margin="579,0,0,0">
                            <materialDesign:PackIcon Kind="Eye" Width="20" Height="20"/>
                        </Button>
                    </Grid>

                    <!-- System Name -->
                    <TextBox x:Name="txtSystemName"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="System Name"
                             TextWrapping="NoWrap"
                             AcceptsReturn="False"
                             BorderBrush="Black"
                             BorderThickness="0 0 0 1.5"
                             HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- ========== Row 2: SEARCH داخل Card ========== -->
        <materialDesign:Card Grid.Row="2"
                             Margin="20,0,20,10"
                             Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TextBox Search داخل Border دائري -->
                <Border Grid.Column="0"
                        CornerRadius="20"
                        Background="White"
                        Padding="10 5"
                        Width="300"
                        Height="38"
                        BorderBrush="#bf072f"
                        BorderThickness="1">
                    <TextBox x:Name="txtSearch"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             FontSize="14"
                             KeyDown="txtSearch_KeyDown"
                             VerticalContentAlignment="Center"
                             materialDesign:HintAssist.Hint="System Name..."/>
                </Border>

                <!-- زرار الأيقونة -->
                <Button x:Name="btnSearch"
                        Grid.Column="1"
                        Width="38"
                        Height="38"
                        Margin="10 0 0 0"
                        Background="Transparent"
                        BorderBrush="#bf072f"
                        BorderThickness="1"
                        ToolTip="Search"
                        Click="btnSearch_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="19" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Icon:PackIconMaterial Kind="Magnify" Width="18" Height="18" Foreground="#bf072f"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- ========== Row 3: DATAGRID ========== -->
        <DataGrid x:Name="dgSystems"
                  Grid.Row="3"
                  Margin="20,0,20,10"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  SelectionChanged="dgUsers_SelectionChanged"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  BorderBrush="#dddddd"
                  BorderThickness="1"
                  HorizontalGridLinesBrush="#e0e0e0"
                  VerticalGridLinesBrush="#e0e0e0"
                  RowBackground="White"
                  AlternatingRowBackground="#fafafa"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  ColumnWidth="*">

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
            </DataGrid.Resources>

            <!-- ✅ Cell Style -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5,0"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>

            <!-- ✅ Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader"
                       BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="#bf072f"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- ✅ Row Style -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3"
                                        SnapsToDevicePixels="True">
                                    <DataGridCellsPresenter x:Name="CellsPresenter" />
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#fff2f2"/>
                                    </Trigger>

                                    <!-- ✅ Selected Row Style -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#ffe6e6"/>
                                        <Setter Property="Foreground" Value="#bf072f"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#bf072f"
                                                                  BlurRadius="10"
                                                                  ShadowDepth="0"
                                                                  Opacity="0.2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>

        <!-- ========== Row 4: ACTION BUTTONS ========== -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

            <Button Content="Add"
                    x:Name="btnAdd"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#07bf62"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnAdd_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Content="Update"
                    x:Name="btnUpdate"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#076ebf"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnUpdate_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Content="Delete"
                    x:Name="btnDelete"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#bf072f"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnDelete_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

    </Grid>
</Page>
