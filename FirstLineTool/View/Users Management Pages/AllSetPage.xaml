<Window x:Class="FirstLineTool.View.Users_Management_Pages.AllSetPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLineTool.View.Users_Management_Pages"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_LoadedAsync"
        AllowsTransparency="True"
        Background="Transparent"
        Title="AllSetPage" Height="450" Width="800">
    <Border Background="White" CornerRadius="10" 
        BorderBrush="#bf072f"
        BorderThickness="1"
        MouseDown="Border_MouseDown">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- أيقونة -->
            <materialDesign:PackIcon Kind="CheckCircleOutline"
                                 Width="50" Height="50"
                                 Foreground="#bf072f"
                                 HorizontalAlignment="Center"
                                 Margin="0 0 0 10"/>

            <TextBlock x:Name="txtAllSet" Text="All set!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <TextBlock x:Name="txtWelcome" Text="Welcome back!" FontSize="16" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
