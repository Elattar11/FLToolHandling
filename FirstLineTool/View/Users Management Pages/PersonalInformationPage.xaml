<Window x:Class="FirstLineTool.View.Users_Management_Pages.PersonalInformationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLineTool.View.Users_Management_Pages"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded"
        AllowsTransparency="True"
        Background="Transparent"
        Title="PersonalInformationPage" Height="250" Width="800">
    <Border Background="White" CornerRadius="10" 
        BorderBrush="#bf072f"
        BorderThickness="1"
        MouseDown="Border_MouseDown">

        <StackPanel Margin="20,20,20,11">
            <TextBlock HorizontalAlignment="Center" Text="Now update your personal information" Margin="0 0 0 5" FontSize="12"/>

            <!-- New Password -->
            <TextBox Grid.Row="0" Grid.Column="0"
                x:Name="txtFirstName"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                materialDesign:HintAssist.Hint="First Name"
                BorderBrush="Black"
                BorderThickness="0 0 0 1.5"
                Margin="0 0 10 10"/>

            <!-- Confirm Password -->
            <TextBox Grid.Row="0" Grid.Column="0"
                x:Name="txtLastName"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                materialDesign:HintAssist.Hint="Last Name"
                BorderBrush="Black"
                BorderThickness="0 0 0 1.5"
                Margin="0 0 10 10"/>

            <TextBox Grid.Row="0" Grid.Column="0"
                x:Name="txtTitle"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                materialDesign:HintAssist.Hint="Your Title"
                BorderBrush="Black"
                     KeyDown="txtTitle_KeyDown"
                BorderThickness="0 0 0 1.5"
                Margin="0 0 10 10"/>

            <Button Width="120"
                x:Name="btnFinish"
                Margin="0 10 0 0"
                HorizontalAlignment="Right"
                Background="Transparent"
                Foreground="#bf072f"
                Click="btnFinish_ClickAsync">
                Finish
            </Button>
        </StackPanel>
    </Border>
</Window>
