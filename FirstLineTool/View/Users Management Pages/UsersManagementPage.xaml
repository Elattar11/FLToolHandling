<Page x:Class="FirstLineTool.View.Users_Management_Pages.UsersManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Loaded="Page_Loaded"
      Title="UsersManagementPage">

    <Page.Resources>
        <!-- نفس Style بتاع ScrollBar اللي عندك -->
        <Style TargetType="ScrollBar" BasedOn="{x:Null}">
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder"
                                                        CornerRadius="5"
                                                        Background="#a00628"
                                                        Margin="1,0"
                                                        SnapsToDevicePixels="True"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Users + Teams/Roles -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Action Buttons -->
        </Grid.RowDefinitions>

        <!-- ========== Row 0: HEADER ========== -->
        <Grid Grid.Row="0" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- عنوان الصفحة -->
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        Grid.Column="0">
                <TextBlock Text="Users Management"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333"/>
                <TextBlock Text="Manage users, teams, and roles"
                           FontSize="12"
                           Foreground="#777"/>
            </StackPanel>

            <!-- زر Teams في الهيدر -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="1">

                <Button x:Name="btnTeams"
                        Click="btnTeams_Click_1"
                        Style="{StaticResource topButton}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="AccountGroup" Width="18" Height="18" Margin="0,0,5,0"/>
                        
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- ========== Row 1: USERS + TEAM / ROLE داخل Card ========== -->
        <materialDesign:Card Grid.Row="1"
                             Margin="20,0,20,10"
                             Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- TextBox Users -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Teams / Roles -->
                </Grid.ColumnDefinitions>

                <!-- TextBox Users -->
                <Border Grid.Column="0"
                        Background="White"
                        Padding="5"
                        Height="110"
                        BorderBrush="#dddddd"
                        BorderThickness="1"
                        Margin="0,0,10,0"
                        CornerRadius="4">
                    <TextBox x:Name="txtUsers"
                             Background="Transparent"
                             BorderThickness="0"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             materialDesign:HintAssist.Hint="Enter Users"
                             Padding="5"/>
                </Border>

                <!-- Teams & Roles -->
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Top">
                    <ComboBox x:Name="cbxTeams"
                              Width="300"
                              Margin="0,0,0,5"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select Team"/>

                    <ComboBox x:Name="cbxRoles"
                              Width="300"
                              Margin="0,5,0,0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select Role">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="User"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- ========== Row 2: SEARCH داخل Card ========== -->
        <materialDesign:Card Grid.Row="2"
                             Margin="20,0,20,10"
                             Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TextBox Search داخل Border دائري -->
                <Border Grid.Column="0"
                        CornerRadius="20"
                        Background="White"
                        Padding="10 5"
                        Width="300"
                        Height="38"
                        BorderBrush="#bf072f"
                        BorderThickness="1">
                    <TextBox x:Name="txtSearch"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             FontSize="14"
                             KeyDown="txtSearch_KeyDown"
                             VerticalContentAlignment="Center"
                             materialDesign:HintAssist.Hint="Username..."/>
                </Border>

                <!-- زرار الأيقونة -->
                <Button x:Name="btnSearch"
                        Grid.Column="1"
                        Width="38"
                        Height="38"
                        Margin="10 0 0 0"
                        Background="Transparent"
                        BorderBrush="#bf072f"
                        BorderThickness="1"
                        ToolTip="Search"
                        Click="btnSearch_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="19" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Icon:PackIconMaterial Kind="Magnify" Width="18" Height="18" Foreground="#bf072f"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- ========== Row 3: DATAGRID ========== -->
        <DataGrid x:Name="dgUsers"
                  Grid.Row="3"
                  Margin="20,0,20,10"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  SelectionChanged="dgUsers_SelectionChanged"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  BorderBrush="#dddddd"
                  BorderThickness="1"
                  HorizontalGridLinesBrush="#e0e0e0"
                  VerticalGridLinesBrush="#e0e0e0"
                  RowBackground="White"
                  AlternatingRowBackground="#fafafa"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  ColumnWidth="*">

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
            </DataGrid.Resources>

            <!-- ✅ Cell Style -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5,0"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>

            <!-- ✅ Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader"
                       BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="#bf072f"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- ✅ Row Style -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3"
                                        SnapsToDevicePixels="True">
                                    <DataGridCellsPresenter x:Name="CellsPresenter" />
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#fff2f2"/>
                                    </Trigger>

                                    <!-- ✅ Selected Row Style -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#ffe6e6"/>
                                        <Setter Property="Foreground" Value="#bf072f"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#bf072f"
                                                                  BlurRadius="10"
                                                                  ShadowDepth="0"
                                                                  Opacity="0.2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>

        <!-- ========== Row 4: ACTION BUTTONS ========== -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

            <Button Content="Add"
                    x:Name="btnAdd"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#07bf62"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnAdd_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Content="Update"
                    x:Name="btnUpdate"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#076ebf"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnUpdate_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Content="Delete"
                    x:Name="btnDelete"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#bf072f"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnDelete_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Content="Reset"
                    x:Name="btnReset"
                    Width="100" Height="35"
                    Margin="5 0"
                    Background="#d84315"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="btnReset_Click"
                    materialDesign:ButtonAssist.CornerRadius="16"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

        </StackPanel>

    </Grid>
</Page>
