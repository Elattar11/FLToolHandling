<Window x:Class="FirstLineTool.View.Users_Management_Pages.ResetPasswordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLineTool.View.Users_Management_Pages"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="ResetPasswordPage" Height="225" Width="400">
    
    
    <Border Background="White" CornerRadius="10" 
            BorderBrush="#bf072f"
            BorderThickness="1"
            MouseDown="Border_MouseDown">

        <StackPanel Margin="20,20,20,11">
            <TextBlock x:Name="txtWelcome" HorizontalAlignment="Center" Text="Welcome in FL Tool Handling" Margin="0 0 0 5" FontWeight="Bold" FontSize="14"/>
            <TextBlock HorizontalAlignment="Center" Text="Please change your default password first" Margin="0 0 0 5" FontSize="12"/>

            <!-- New Password -->
            <PasswordBox 
                x:Name="txtPassword"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                materialDesign:HintAssist.Hint="Password"
                materialDesign:HintAssist.FloatingOffset="0,-20"
                BorderBrush="#c5c8cc"
                Margin="0 10 0 10"
                BorderThickness="0 0 0 1.5"/>

            <!-- Confirm Password -->
            <PasswordBox 
                x:Name="txtConfirmationPassword"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                materialDesign:HintAssist.Hint="Confirmation Password"
                materialDesign:HintAssist.FloatingOffset="0,-20"
                BorderBrush="#c5c8cc"
                Margin="0 0 0 10"
                KeyDown="txtConfirmationPassword_KeyDown"
                BorderThickness="0 0 0 1.5"/>

            <Button Width="120"
                x:Name="btnNext"
                Margin="0 10 0 0"
                HorizontalAlignment="Right"
                Background="Transparent"
                Foreground="#bf072f"
                Click="btnResetPassword_ClickAsync">
                Next →
            </Button>
        </StackPanel>
    </Border>
</Window>
