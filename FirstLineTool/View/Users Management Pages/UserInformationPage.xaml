<Page x:Class="FirstLineTool.View.Users_Management_Pages.UserInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:FirstLineTool.View.Users_Management_Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Loaded="Window_Loaded"
      mc:Ignorable="d" Height="700" Width="900">

    <Grid Background="White">

        

        <!-- المحتوى -->
        <StackPanel Margin="40 60 40 40" VerticalAlignment="Top">
            <GroupBox Header="Personal Information"
                      HorizontalAlignment="Stretch"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      Background="White"
                      Padding="10"
                      SnapsToDevicePixels="True">

                <GroupBox.Resources>
                    <Style TargetType="GroupBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GroupBox">
                                    <Grid>
                                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Background="White" />
                                        <DockPanel Margin="10,7,10,10">
                                            <Label DockPanel.Dock="Top"
                                                   Content="{TemplateBinding Header}"
                                                   Background="White"
                                                   Foreground="Black"
                                                   FontWeight="Bold"
                                                   Margin="10,-17,0,5"/>
                                            <ContentPresenter Margin="0,5,0,0"/>
                                        </DockPanel>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupBox.Resources>

                <Grid Margin="0 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             x:Name="txtFirstName"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="First Name"
                             BorderBrush="Black"
                             BorderThickness="0 0 0 1.5"
                             Margin="0 0 0 15"/>

                    <TextBox Grid.Row="1"
                             x:Name="txtLastName"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Last Name"
                             BorderBrush="Black"
                             BorderThickness="0 0 0 1.5"
                             Margin="0 0 0 15"/>

                    <TextBox Grid.Row="2"
                             x:Name="txtTitle"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Title"
                             BorderBrush="Black"
                             BorderThickness="0 0 0 1.5"
                             Margin="0 0 0 15"/>
                </Grid>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                <Button Content="Update"
                        x:Name="btnUpdate"
                        Width="100" Height="35"
                        Background="#076ebf"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="btnUpdate_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
