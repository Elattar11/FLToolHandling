<Page x:Class="FirstLineTool.View.Dashboard.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstLineTool.View.Dashboard"
      mc:Ignorable="d" 
      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:wpfplot="http://oxyplot.org/wpf"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- زرار Run -->
            <RowDefinition Height="Auto"/>
            <!-- الكروت -->
            <RowDefinition Height="Auto"/>
            <!-- زرار Get My SRs -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10">
            <!-- زرار Backup -->
            <Button Name="btnBackup"
            Style="{StaticResource topButton}"
            Click="btnBackup_ClickAsync"
            Margin="0,0,10,0">
                <materialDesign:PackIcon Kind="Backup" Width="18" Height="18"/>
            </Button>

            <!-- زرار Settings -->
            <Button Name="btnSettings"
            Style="{StaticResource topButton}"
            Click="btnSettings_Click">
                <materialDesign:PackIcon Kind="Cog" Width="18" Height="18"/>
            </Button>
        </StackPanel>


        <!-- زرار Run فوق الكروت -->
        <Button Name="btnRun" 
                Content="Run My Dashboard"
                Foreground="White"
                Background="#b9052f"
                BorderBrush="Transparent"
                Click="btnRun_ClickAsync"
                materialDesign:ButtonAssist.CornerRadius="24"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Width="200" Height="50" HorizontalAlignment="Center" Margin="0,10,0,10"
                />

        <!-- StackPanel الكروت -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="1">
            <!-- Handled Card -->
            <Border Width="180" Height="100" CornerRadius="16" Margin="10" Padding="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#B328A745" Offset="0"/>
                        <GradientStop Color="#B328A745" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Handled" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="lblHandled" Text="0" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Rejected Card -->
            <Border Width="180" Height="100" CornerRadius="16" Margin="10" Padding="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#BDDC3545" Offset="0"/>
                        <GradientStop Color="#BDDC3545" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Rejected" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="lblRejected" Text="0" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Total Card -->
            <Border Width="180" Height="100" CornerRadius="16" Margin="10" Padding="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#B35A5CAD" Offset="0"/>
                        <GradientStop Color="#B35A5CAD" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Total" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="lblTotal" Text="0" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- للزرار -->
                <ColumnDefinition Width="*"/>
                <!-- للفراغ -->
                <ColumnDefinition Width="Auto"/>
                <!-- للTextBlock -->
            </Grid.ColumnDefinitions>

            <!-- زرار على الشمال -->
            <Button Content="Get My Assigned SRs"
            x:Name="btnExport"
            Click="btnExport_ClickAsync"
            Foreground="White"
            Background="#b9052f"
            Margin="20,0,0,0"
            BorderBrush="Transparent"
            materialDesign:ButtonAssist.CornerRadius="24"
            Style="{StaticResource MaterialDesignRaisedButton}"
            Width="200"
            Height="50"
            Grid.Column="0" VerticalAlignment="Top"/>

            <!-- TextBlock على اليمين -->
            <TextBlock x:Name="txtTotalQueue"
               FontWeight="Bold"
               FontSize="16"
               Margin="0 0 20 0"
               Foreground="Black"
               VerticalAlignment="Center"
               Grid.Column="2"
               Text="Total Queue: 0"/>
        </Grid>
        <!-- DataGrid -->
        <DataGrid x:Name="ResultsDataGrid"
          Grid.Row="3"
          RowHeight="24"
          Margin="20,0,20,20"
          AutoGenerateColumns="True"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserResizeColumns="True"
          IsReadOnly="True"
          HeadersVisibility="Column"
          SelectionUnit="Cell"
          SelectionMode="Extended"
          GridLinesVisibility="All"
          BorderBrush="#d0d0d0"
          BorderThickness="1"
          HorizontalGridLinesBrush="#e0e0e0"
          VerticalGridLinesBrush="#e0e0e0"
          AutoGeneratingColumn="ResultsDataGrid_AutoGeneratingColumn">

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="6"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="BorderBrush" Value="#d0d0d0"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border x:Name="CellBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CellBorder" Property="Background" Value="#eaf3ff"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="CellBorder" Property="Background" Value="Black"/>
                                        <Setter TargetName="CellBorder" Property="BorderBrush" Value="#333333"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#bf072f"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

        </DataGrid>

       

    </Grid>
</Page>
