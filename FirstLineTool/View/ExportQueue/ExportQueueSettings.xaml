<Window x:Class="FirstLineTool.View.ExportQueue.ExportQueueSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLineTool.View.ExportQueue" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="ExportQueueSettings" Height="700" Width="900">


    <Window.Resources>
        <Style TargetType="ScrollBar" BasedOn="{x:Null}">
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Width" Value="10"/>

            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder"
                                                CornerRadius="5"
                                                Background="#a00628"
                                                Margin="1,0"
                                                SnapsToDevicePixels="True"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>





    <Border Background="White" CornerRadius="10" 
    BorderBrush="#bf072f"
    BorderThickness="1"
    MouseDown="Border_MouseDown">

        <Grid>
            <!-- زرارين فوق على اليمين -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 10 10 0">

                <Button x:Name="btnRefresh" Style="{StaticResource topButton}" Click="btnRefresh_Click"
                >
                    <Icon:PackIconMaterial Kind="Refresh" Width="12" Height="12"/>
                </Button>

                <!-- Close -->
                <Button Name="btnClose" Style="{StaticResource topButton}" Click="btnClose_Click">
                    <Icon:PackIconMaterial Kind="Close" Width="12" Height="12"/>
                </Button>

            </StackPanel>

            <!-- محتوى الفورم -->
            <StackPanel Margin="40 60 40 40" VerticalAlignment="Top">
                <GroupBox Header="Queue"
                  HorizontalAlignment="Stretch"
                  
                  BorderBrush="Gray"
                  BorderThickness="1"
                  Background="White"
                  Padding="10"
                  SnapsToDevicePixels="True">
                    <GroupBox.Resources>
                        <!-- Style يجعل GroupBox بنفس شكل Windows Forms -->
                        <Style TargetType="GroupBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <Grid>
                                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Background="White" />
                                            <DockPanel Margin="10,7,10,10">
                                                <Label DockPanel.Dock="Top"
                                   Content="{TemplateBinding Header}"
                                   Background="White"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   Margin="10,-17,0,5"/>
                                                <ContentPresenter Margin="0,5,0,0"/>
                                            </DockPanel>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupBox.Resources>
                    <Grid Margin="0 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Query Name -->
                        <TextBox Grid.Row="0"
                            x:Name="txtQueryName"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            materialDesign:HintAssist.Hint="Queue Name"
                            BorderBrush="Black"
                            BorderThickness="0 0 0 1.5"
                            Margin="0 0 0 10"/>

                        
                    </Grid>
                </GroupBox>

                <!-- الجروب بوكس الجديد -->
                <GroupBox Header="Result"
                  HorizontalAlignment="Stretch"
                  Margin="0 20 0 0"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  Background="White"
                  Padding="10"
                  SnapsToDevicePixels="True">

                    <GroupBox.Resources>
                        <!-- تنسيق GroupBox مشابه لـ Windows Forms -->
                        <Style TargetType="GroupBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <Grid>
                                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Background="White" />
                                            <DockPanel Margin="10,7,10,10">
                                                <Label DockPanel.Dock="Top"
                                   Content="{TemplateBinding Header}"
                                   Background="White"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   Margin="10,-17,0,5"/>
                                                <ContentPresenter Margin="0,5,0,0"/>
                                            </DockPanel>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupBox.Resources>

                    <!-- المحتوى الداخلي -->
                    <StackPanel>

                        <!-- مربع البحث -->
                        <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Margin="0 10 0 10">

                            <!-- TextBox داخل Border علشان يكون دائري -->
                            <Border CornerRadius="20"
                Background="White"
                Padding="10 5"
                Width="300"
                Height="38"
                BorderBrush="#bf072f"
                BorderThickness="1">

                                <TextBox x:Name="txtSearch"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="Black"
                     FontSize="14"
                     KeyDown="txtSearch_KeyDown"
                     VerticalContentAlignment="Center"
                     materialDesign:HintAssist.Hint="Queue name..."/>
                            </Border>

                            <!-- زرار الأيقونة -->
                            <Button x:Name="btnSearch"
                            Width="38"
                            Height="38"
                            Margin="10 0 0 0"
                            Background="Transparent"
                            BorderBrush="#bf072f"
                            BorderThickness="1"
                            ToolTip="Search"
                            Click="btnSearch_Click"
                            Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="19" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>

                                <Icon:PackIconMaterial Kind="Magnify" Width="18" Height="18" Foreground="#bf072f"/>
                            </Button>
                        </StackPanel>


                        <DataGrid x:Name="dgQueues"
      Margin="0 10 0 0"
      AutoGenerateColumns="True"
      CanUserAddRows="False"
      CanUserDeleteRows="False"
      IsReadOnly="True"
      MaxHeight="200"
      VerticalScrollBarVisibility="Auto"
      HorizontalScrollBarVisibility="Auto"
      SelectionChanged="dgQueues_SelectionChanged"
      HeadersVisibility="Column"
      GridLinesVisibility="All"
      BorderBrush="#dddddd"
      BorderThickness="1"
      HorizontalGridLinesBrush="#e0e0e0"
      VerticalGridLinesBrush="#e0e0e0"
      RowBackground="White"
      AlternatingRowBackground="#fafafa"
      Style="{StaticResource MaterialDesignDataGrid}"
      ColumnWidth="*">
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                            </DataGrid.Resources>

                            <!-- ✅ Cell Style -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                    <Setter Property="BorderThickness" Value="0.5"/>
                                    <Setter Property="BorderBrush" Value="#dddddd"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                                                    <ContentPresenter 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            RecognizesAccessKey="True"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <!-- ✅ Header Style -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader"
                                BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="Background" Value="#bf072f"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Height" Value="35"/>

                                    <!-- الفاصل -->
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- ✅ Row Style -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    <Setter Property="BorderBrush" Value="#dddddd"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridRow">
                                                <Border x:Name="RowBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3"
                        SnapsToDevicePixels="True"
                        >
                                                    <DataGridCellsPresenter x:Name="CellsPresenter" />
                                                </Border>

                                                <ControlTemplate.Triggers>

                                                    <!-- Hover -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="RowBorder" Property="Background" Value="#fff2f2"/>
                                                    </Trigger>

                                                    <!-- ✅ Selected Row Style -->
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="RowBorder" Property="Background" Value="#ffe6e6"/>
                                                        <Setter Property="Foreground" Value="#bf072f"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#bf072f"
                                                  BlurRadius="10"
                                                  ShadowDepth="0"
                                                  Opacity="0.2"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>

                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.RowStyle>

                        </DataGrid>



                        <!-- الأزرار -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                            <Button Content="Add"
                            x:Name="btnAdd"
                            Width="100" Height="35"
                            Margin="5 0"
                            Background="#07bf62"
                            BorderBrush="Transparent"
                            Foreground="White" Click="btnAdd_Click"/>

                            <Button Content="Update"
                            x:Name="btnUpdate"
                            Width="100" Height="35"
                            Margin="5 0"
                            Background="#076ebf"
                            BorderBrush="Transparent"
                            Foreground="White" Click="btnUpdate_Click"/>

                            <Button Content="Delete"
                            x:Name="btnDelete"
                            Width="100" Height="35"
                            Margin="5 0"
                            Background="#bf072f"
                            BorderBrush="Transparent"
                            Foreground="White" Click="btnDelete_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </Grid>
    </Border>


</Window>
